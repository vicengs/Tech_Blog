{{> post-info post }}
{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <h2>Comment</h2>
      <textarea name="comment-body"></textarea>
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
{{/if}}
{{> comment post.comments }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}