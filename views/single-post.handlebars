<h1 class="section-title mb-3 d-flex justify-content-start">Post</h1>
{{> post-info post }}
{{#if loggedIn}}
  <form class="comment-form">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <label for="comment-title">Comment</label>
        </div>
        <textarea name="comment-body" maxlength="250"></textarea>
        <div class="d-flex justify-content-center pt-3 pb-2">
          <button type="submit" class="btn-create">Add Comment</button>
        </div>
      </div>
    </div>
  </form>
{{/if}}
{{> comment post.comments }}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}