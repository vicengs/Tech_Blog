<div class="d-flex justify-content-center">
  <form class="edit-post-form">
    <div class="card">
      <h3 class="card-header">Edit Post</h3>
      <div class="card-body post-body">
        <div class="card-title">
          <label for="title">Title</label>
        </div>
        <input name="post-title" type="text" value="{{post.title}}" maxlength="80"/>
        <div class="card-title">
          <label for="content">Content</label>
        </div>
        <textarea id="post-content" name="post-content" maxlength="250">{{post.content_post}}</textarea>
        <div class="d-flex justify-content-between pt-3 pb-2">
          <button type="submit" class="btn-create">Update Post</button>
        </div>
        <div class="d-flex justify-content-between pb-2">
          <button type="button" class="delete-post-btn">Delete</button>
        </div>
      </div>
    </div>
  </form>
</div>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>